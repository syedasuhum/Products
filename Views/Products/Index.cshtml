@model IEnumerable<Products.Models.tbl_Products>

@{
    ViewBag.Title = "Index";
}

<h2>Product Table</h2>

<p>
    @Html.ActionLink("Create New", "Create", null ,new { @class="btn btn-primary"})
</p>

<div>
    @using (Html.BeginForm("Index","Products",FormMethod.Get))
            {
                <table>
                    
                    
                    <tr>
                        <td>
                            @Html.TextBox("searching", null, new {@class = "form-control", placeholder = "Search Here" })
                        </td>
                        
                        <td>
                            <input type="submit" value="search" class="btn btn-success" />
                            <input type="submit" value="Reset" class="btn btn-warning" />
                        </td>
                    </tr>
                </table>
            }

</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MfgDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {

        <tr>
            no record found
        </tr>


    }
    else
    {
      foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MfgDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Product_ID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Product_ID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Product_ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }


    }



</table>
